<h1>Eat Da Burger!</h1>

<h2>Eat me!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      
      <li>
          {{this.burger_name}}

          <button class= "eat" > Eat Da Burger!</button>

      </li>
      
    {{/unless}}
  {{/each}}
</ul>

<h2>OM NOM NOM!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      
      <li>
          {{burger_name}}

          
      </li>
      
    {{/if}}
  {{/each}}
